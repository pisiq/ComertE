@model Hotel.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container my-5 pt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4"><i class="bi bi-cart-fill me-2"></i>Shopping Cart</h2>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model == null || !Model.CartItems.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>Your cart is empty. <a asp-controller="Room" asp-action="AllRooms">Continue shopping</a>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <!-- Booking Dates Card -->
                    <div class="card shadow-sm mb-4 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-calendar-range me-2"></i>Select Booking Dates</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="form-label fw-bold">Check-in Date</label>
                                    <input type="date" id="globalCheckInDate" class="form-control"
                                           value="@Model.CartItems.First().CheckInDate.ToString("yyyy-MM-dd")"
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label fw-bold">Check-out Date</label>
                                    <input type="date" id="globalCheckOutDate" class="form-control"
                                           value="@Model.CartItems.First().CheckOutDate.ToString("yyyy-MM-dd")"
                                           min="@Model.CartItems.First().CheckInDate.AddDays(1).ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button id="updateAllDatesBtn" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle me-1"></i>Update
                                    </button>
                                </div>
                            </div>
                            <div class="alert alert-info mt-3 mb-0">
                                <div class="row">
                                    <div class="col-md-6">
                                        <i class="bi bi-moon-stars me-1"></i>
                                        <strong>Total nights:</strong> <span id="totalNights">@Model.CartItems.First().NumberOfNights</span>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <i class="bi bi-info-circle me-1"></i>
                                        <small>Dates apply to all items in cart</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cart Items -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-bag me-2"></i>Cart Items</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="row mb-3 pb-3 border-bottom cart-item" data-item-id="@item.Id">
                                    <div class="col-md-2">
                                        @if (!string.IsNullOrEmpty(item.Product.MainPhotoPath))
                                        {
                                            <img src="@item.Product.MainPhotoPath" alt="@item.Product.Type" class="img-fluid rounded" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 100px;">
                                                <i class="bi bi-image fs-1"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <h5>@item.Product.Type</h5>
                                        <p class="text-muted mb-1">@item.Product.Location.Name</p>
                                        @if (!string.IsNullOrEmpty(item.Product.Description))
                                        {
                                            <small class="text-muted">@item.Product.Description</small>
                                        }
                                        <p class="mt-2"><strong>$@item.Product.Price.ToString("F2")</strong> per night</p>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Quantity</label>
                                        <div class="input-group input-group-sm">
                                            <button class="btn btn-outline-secondary btn-quantity-decrease" type="button" data-item-id="@item.Id">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="number" class="form-control text-center quantity-input" value="@item.Quantity" min="1" data-item-id="@item.Id" readonly />
                                            <button class="btn btn-outline-secondary btn-quantity-increase" type="button" data-item-id="@item.Id">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <label class="form-label">Price</label>
                                        <p class="fw-bold item-total">$@item.TotalPrice.ToString("F2")</p>
                                        <button class="btn btn-danger btn-sm btn-remove-item" data-item-id="@item.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span id="cart-subtotal">$@Model.CartItems.Sum(ci => ci.TotalPrice).ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (10%):</span>
                                <span id="cart-tax">$@((Model.CartItems.Sum(ci => ci.TotalPrice) * 0.1m).ToString("F2"))</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong id="cart-total">$@((Model.CartItems.Sum(ci => ci.TotalPrice) * 1.1m).ToString("F2"))</strong>
                            </div>
                            <a asp-controller="Booking" asp-action="Create" class="btn btn-success w-100 mb-2">
                                <i class="bi bi-credit-card me-2"></i>Proceed to Checkout
                            </a>
                            <a asp-controller="Room" asp-action="AllRooms" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>

                    <!-- Booking Info -->
                    <div class="alert alert-warning mt-3">
                        <h6><i class="bi bi-info-circle me-2"></i>Booking Information</h6>
                        <small>
                            <ul class="mb-0 ps-3">
                                <li>Check-in time: After 2:00 PM</li>
                                <li>Check-out time: Before 12:00 PM</li>
                                <li>All items share the same booking dates</li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <form asp-action="Clear" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to clear your cart?')">
                            <i class="bi bi-trash me-2"></i>Clear Cart
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const checkInInput = $('#globalCheckInDate');
            const checkOutInput = $('#globalCheckOutDate');

            // Update total nights display
            function updateNightsDisplay() {
                if (checkInInput.val() && checkOutInput.val()) {
                    const checkIn = new Date(checkInInput.val());
                    const checkOut = new Date(checkOutInput.val());
                    const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                    $('#totalNights').text(nights > 0 ? nights : 0);
                }
            }

            // Handle check-in date change
            checkInInput.on('change', function() {
                const checkInDate = new Date(this.value);
                checkInDate.setDate(checkInDate.getDate() + 1);
                const minCheckOutDate = checkInDate.toISOString().split('T')[0];
                checkOutInput.attr('min', minCheckOutDate);

                if (checkOutInput.val() && new Date(checkOutInput.val()) <= new Date(this.value)) {
                    checkOutInput.val(minCheckOutDate);
                }

                updateNightsDisplay();
            });

            checkOutInput.on('change', updateNightsDisplay);

            // Update all cart items with new dates
            $('#updateAllDatesBtn').click(function () {
                const checkInDate = checkInInput.val();
                const checkOutDate = checkOutInput.val();

                if (!checkInDate || !checkOutDate) {
                    alert('Please select both check-in and check-out dates');
                    return;
                }

                if (new Date(checkOutDate) <= new Date(checkInDate)) {
                    alert('Check-out date must be after check-in date');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("UpdateAllDates", "Cart")',
                    type: 'POST',
                    data: {
                        checkInDate: checkInDate,
                        checkOutDate: checkOutDate,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to update dates');
                        }
                    },
                    error: function () {
                        alert('An error occurred');
                    }
                });
            });

            // Increase quantity
            $('.btn-quantity-increase').click(function () {
                var itemId = $(this).data('item-id');
                var input = $('.quantity-input[data-item-id="' + itemId + '"]');
                var newQuantity = parseInt(input.val()) + 1;
                updateQuantity(itemId, newQuantity);
            });

            // Decrease quantity
            $('.btn-quantity-decrease').click(function () {
                var itemId = $(this).data('item-id');
                var input = $('.quantity-input[data-item-id="' + itemId + '"]');
                var currentQuantity = parseInt(input.val());
                if (currentQuantity > 1) {
                    updateQuantity(itemId, currentQuantity - 1);
                }
            });

            // Remove item
            $('.btn-remove-item').click(function () {
                if (confirm('Remove this item from cart?')) {
                    var itemId = $(this).data('item-id');
                    removeItem(itemId);
                }
            });

            function updateQuantity(itemId, quantity) {
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: itemId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to update quantity');
                        }
                    },
                    error: function () {
                        alert('An error occurred');
                    }
                });
            }

            function removeItem(itemId) {
                $.ajax({
                    url: '@Url.Action("RemoveItem", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: itemId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to remove item');
                        }
                    },
                    error: function () {
                        alert('An error occurred');
                    }
                });
            }
        });
    </script>
}