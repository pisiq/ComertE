@model IEnumerable<Hotel.Models.Room>

@{
    ViewData["Title"] = ViewBag.SelectedLocation != null ? $"Rooms in {ViewBag.SelectedLocation}" : "Our Rooms";
}
<div class="hero">
<div class="container mt-5 pt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4">
                @if (ViewBag.SelectedLocation != null)
                {
                    <span>Rooms in @ViewBag.SelectedLocation</span>
                }
                else
                {
                    <span>Our Rooms</span>
                }
            </h1>
            <p class="lead">Discover the perfect room for your stay</p>
        </div>
    </div>

    <!-- Category Filter -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="AllRooms">
                        <div class="input-group">
                            <label class="input-group-text bg-success text-white">
                                <i class="bi bi-geo-alt-fill me-1"></i>Filter by Location
                            </label>
                            <select name="locationId" class="form-select" onchange="this.form.submit()">
                                <option value="">All Locations</option>
                                @if (ViewBag.Locations != null)
                                {
                                    foreach (var location in (IEnumerable<Hotel.Models.Location>)ViewBag.Locations)
                                    {
                                        var isSelected = ViewBag.SelectedLocationId != null && (int)ViewBag.SelectedLocationId == location.Id;
                                        <option value="@location.Id" selected="@isSelected">
                                            @location.Name
                                        </option>
                                    }
                                }
                            </select>
                            @if (ViewBag.SelectedLocationId != null)
                            {
                                <a asp-action="AllRooms" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Clear
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            @if (ViewBag.SelectedLocation != null)
            {
                <span>No rooms available in @ViewBag.SelectedLocation at the moment.</span>
            }
            else
            {
                <span>No rooms available at the moment. Please check back later.</span>
            }
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var room in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(room.MainPhotoPath))
                        {
                            <img src="@room.MainPhotoPath" class="card-img-top" alt="@room.Type" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">No image available</span>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@room.Type</h5>
                                <span class="badge bg-success rounded-pill">$@room.Price.ToString("F2")</span>
                            </div>
                            <p class="card-text small text-muted mb-2">
                                <i class="bi bi-geo-alt-fill"></i> @(room.Location?.Name ?? "N/A")
                            </p>
                            <p class="card-text text-truncate" title="@room.Description">
                                @room.Description
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top">
                            <div class="d-flex justify-content-between align-items-center gap-2">   
                                <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-sm btn-outline-success flex-grow-1">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>
                                <button class="btn btn-sm btn-outline-danger btn-add-favorite" 
                                        data-room-id="@room.Id"
                                        title="Add to favorites">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </div>
                            <small class="text-muted d-block mt-2">
                                @if (room.Photos.Count > 0)
                                {
                                    <span><i class="bi bi-images me-1"></i>@room.Photos.Count additional photos</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-image me-1"></i>No additional photos</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 pt-3 text-center">
            <p class="text-muted">
                Looking for something specific? Contact us for personalized recommendations.
            </p>
        </div>
    }
</div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add to favorites
            $('.btn-add-favorite').on('click', function(e) {
                e.preventDefault();
                const button = $(this);
                const roomId = button.data('room-id');
                const icon = button.find('i');
                
                $.ajax({
                    url: '@Url.Action("Add", "Favorite")',
                    type: 'POST',
                    data: {
                        roomId: roomId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            icon.removeClass('bi-heart').addClass('bi-heart-fill');
                            button.removeClass('btn-outline-danger').addClass('btn-danger');
                            showToast('success', response.message);
                            
                            // Update favorite count in navbar if exists
                            if ($('#favoriteCount').length && response.count) {
                                $('#favoriteCount').text(response.count);
                            }
                        } else {
                            showToast('warning', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Failed to add to favorites');
                    }
                });
            });

            function showToast(type, message) {
                const bgClass = type === 'success' ? 'bg-success' : type === 'warning' ? 'bg-warning' : 'bg-danger';
                const toast = `
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div class="toast show ${bgClass} text-white" role="alert">
                            <div class="toast-body">
                                ${message}
                            </div>
                        </div>
                    </div>
                `;
                $('body').append(toast);
                setTimeout(function() {
                    $('.toast').fadeOut(300, function() { $(this).parent().remove(); });
                }, 3000);
            }
        });

        // Enable tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>

    <style>
        .hover-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15) !important;
        }

        .btn-add-favorite {
            transition: all 0.2s;
        }

        .btn-add-favorite:hover {
            transform: scale(1.1);
        }
    </style>
}

@Html.AntiForgeryToken()