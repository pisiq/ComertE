@model IEnumerable<Hotel.Models.Location>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container mt-5 pt-4">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-4">Browse by Category</h1>
                <p class="lead">Explore our rooms by location</p>
            </div>
        </div>

        @if (Model?.Any() == true)
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var location in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-category-card">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>@location.Name</h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="text-center mb-3">
                                    <i class="bi bi-building text-success" style="font-size: 4rem;"></i>
                                </div>
                                <p class="card-text text-center">
                                    Discover our rooms in @location.Name
                                </p>
                                <div class="mt-auto text-center">
                                    <a asp-controller="Room"
                                       asp-action="ByLocation"
                                       asp-route-id="@location.Id"
                                       class="btn btn-success w-100">
                                        <i class="bi bi-door-open me-2"></i>View Rooms
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
                </div>
                <h4 class="text-muted mb-3">No Categories Available</h4>
                <p class="text-muted mb-4">Check back later for available locations!</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .hover-category-card {
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }
        
        .hover-category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
    </style>
}