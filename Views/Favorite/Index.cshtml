@model IEnumerable<Hotel.Models.Favorite>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-success">
                <i class="bi bi-heart-fill me-2"></i>My Favorite Rooms
            </h2>
            <p class="text-muted">Manage your favorite rooms</p>
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var favorite in Model)
            {
                <div class="col" id="favorite-@favorite.RoomId">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(favorite.Room?.MainPhotoPath))
                        {
                            <img src="@favorite.Room.MainPhotoPath" class="card-img-top" alt="@favorite.Room.Type" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image fs-1"></i>
                            </div>
                        }
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@favorite.Room?.Type</h5>
                                <button class="btn btn-outline-danger btn-sm btn-remove-favorite" 
                                        data-room-id="@favorite.RoomId"
                                        title="Remove from favorites">
                                    <i class="bi bi-heart-fill"></i>
                                </button>
                            </div>
                            
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt-fill me-1"></i>@favorite.Room?.Location?.Name
                            </p>
                            
                            @if (!string.IsNullOrEmpty(favorite.Room?.Description))
                            {
                                <p class="card-text small text-muted">@favorite.Room.Description</p>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 text-success mb-0">$@favorite.Room?.Price.ToString("F2")</span>
                                <span class="text-muted small">per night</span>
                            </div>
                            
                            <div class="text-muted small mt-2">
                                <i class="bi bi-calendar-plus me-1"></i>Added: @favorite.AddedDate.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-top">
                            <div class="d-grid gap-2">
                                <a asp-controller="Room" asp-action="Details" asp-route-id="@favorite.RoomId" 
                                   class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@favorite.RoomId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm w-100">
                                        <i class="bi bi-cart-plus me-1"></i>Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-heart text-muted" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-muted mb-3">No Favorites Yet</h4>
            <p class="text-muted mb-4">Start adding rooms to your favorites to see them here!</p>
            <a asp-controller="Room" asp-action="AllRooms" class="btn btn-success">
                <i class="bi bi-search me-2"></i>Browse Rooms
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Remove from favorites
            $('.btn-remove-favorite').on('click', function(e) {
                e.preventDefault();
                const button = $(this);
                const roomId = button.data('room-id');
                
                $.ajax({
                    url: '@Url.Action("Remove", "Favorite")',
                    type: 'POST',
                    data: {
                        roomId: roomId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#favorite-' + roomId).fadeOut(300, function() {
                                $(this).remove();
                                
                                // Check if no favorites left
                                if ($('.col[id^="favorite-"]').length === 0) {
                                    location.reload();
                                }
                            });
                            
                            // Update favorite count in navbar if exists
                            if ($('#favoriteCount').length) {
                                $('#favoriteCount').text(response.count);
                            }
                            
                            showToast('success', response.message);
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Failed to remove from favorites');
                    }
                });
            });

            // Add to cart via AJAX
            $('.add-to-cart-form').on('submit', function(e) {
                e.preventDefault();
                const form = $(this);
                
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            showToast('success', response.message);
                            
                            // Update cart count in navbar if exists
                            if ($('#cartCount').length && response.itemCount) {
                                $('#cartCount').text(response.itemCount);
                            }
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Failed to add to cart');
                    }
                });
            });

            function showToast(type, message) {
                const bgClass = type === 'success' ? 'bg-success' : 'bg-danger';
                const toast = `
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div class="toast show ${bgClass} text-white" role="alert">
                            <div class="toast-body">
                                ${message}
                            </div>
                        </div>
                    </div>
                `;
                $('body').append(toast);
                setTimeout(function() {
                    $('.toast').fadeOut(300, function() { $(this).parent().remove(); });
                }, 3000);
            }
        });
    </script>

    <style>
        .hover-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15) !important;
        }

        .btn-remove-favorite {
            transition: all 0.2s;
        }

        .btn-remove-favorite:hover {
            transform: scale(1.1);
        }
    </style>
}
