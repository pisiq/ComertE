@model IEnumerable<Hotel.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<div class="hero">
    <div class="container my-5 pt-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1><i class="bi bi-calendar-check me-2"></i>All Bookings</h1>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No bookings found.
            </div>
        }
        else
        {
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Booking ID</th>
                                    <th>User</th>
                                    <th>Items</th>
                                    <th>Check-in</th>
                                    <th>Check-out</th>
                                    <th>Nights</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model)
                                {
                                    <tr>
                                        <td>#@booking.Id</td>
                                        <td>@booking.User?.Name</td>
                                        <td>
                                            @foreach (var item in booking.BookingItems)
                                            {
                                                <div>@item.Room?.Type (@item.Quantity)</div>
                                            }
                                        </td>
                                        <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                        <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                        <td>@booking.NumberOfNights</td>
                                        <td>$@booking.TotalPrice.ToString("F2")</td>
                                        <td>
                                            @switch (booking.Status)
                                            {
                                                case Hotel.Models.BookingStatus.Pending:
                                                    <span class="badge bg-warning">Pending</span>
                                                    break;
                                                case Hotel.Models.BookingStatus.Confirmed:
                                                    <span class="badge bg-success">Confirmed</span>
                                                    break;
                                                case Hotel.Models.BookingStatus.Cancelled:
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    break;
                                                case Hotel.Models.BookingStatus.Completed:
                                                    <span class="badge bg-info">Completed</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (booking.Status != Hotel.Models.BookingStatus.Cancelled)
                                            {
                                                <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Cancel this booking?')">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>