@model Hotel.ViewsModels.BookingViewModel

@{
    ViewData["Title"] = "Confirm Booking";
}
<div class="hero">
    <div class="container mt-5 pt-4">
        <h1>Confirm Your Booking</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="Create" method="post" id="bookingForm">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-8">
                    <!-- Booking Dates Card -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Booking Dates</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Check-in:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Check-out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                            <div class="alert alert-info mb-0">
                                <strong>@Model.NumberOfNights night(s)</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Items Card -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-bag-check me-2"></i>Items to Book</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.Items)
                            {
                                <div class="row mb-3 pb-3 border-bottom">
                                    <div class="col-md-2">
                                        @if (!string.IsNullOrEmpty(item.MainPhotoPath))
                                        {
                                            <img src="@item.MainPhotoPath" alt="@item.RoomType" class="img-fluid rounded" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                                                <i class="bi bi-image fs-3"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <h5>@item.RoomType</h5>
                                        <p class="text-muted mb-0">@item.LocationName</p>
                                        <small class="text-muted">Quantity: @item.Quantity</small>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <p class="mb-0"><strong>$@item.RoomPrice.ToString("F2")</strong> / night</p>
                                        <p class="text-muted mb-0">@item.Quantity × @Model.NumberOfNights night(s)</p>
                                        <p class="fw-bold text-primary">$@item.TotalPrice.ToString("F2")</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Booking Information -->
                    <div class="alert alert-warning">
                        <h5><i class="bi bi-info-circle"></i> Booking Information</h5>
                        <ul class="mb-0">
                            <li>Check-in time is after 2:00 PM</li>
                            <li>Check-out time is before 12:00 PM</li>
                            <li>A valid ID will be required at check-in</li>
                            <li>Bookings can be cancelled up to 24 hours before check-in</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Price Summary Card -->
                    <div class="card shadow sticky-top" style="top: 20px;">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Booking Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>$@Model.Subtotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (10%):</span>
                                <span>$@Model.Tax.ToString("F2")</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong class="text-success fs-4">$@Model.TotalPrice.ToString("F2")</strong>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Confirm Booking
                                </button>
                                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}