@model Hotel.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container my-5 pt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4"><i class="bi bi-cart-fill me-2"></i>Shopping Cart</h2>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model == null || !Model.CartItems.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>Your cart is empty. <a asp-controller="Room" asp-action="AllRooms">Continue shopping</a>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="row mb-3 pb-3 border-bottom cart-item" data-item-id="@item.Id">
                                    <div class="col-md-2">
                                        @if (!string.IsNullOrEmpty(item.Product.MainPhotoPath))
                                        {
                                            <img src="@item.Product.MainPhotoPath" alt="@item.Product.Type" class="img-fluid rounded" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 100px;">
                                                <i class="bi bi-image fs-1"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-10">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h5>@item.Product.Type</h5>
                                                <p class="text-muted mb-1">@item.Product.Location.Name</p>
                                                @if (!string.IsNullOrEmpty(item.Product.Description))
                                                {
                                                    <small class="text-muted">@item.Product.Description</small>
                                                }
                                                <p class="mt-2"><strong>$@item.Product.Price.ToString("F2")</strong> per night</p>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <label class="form-label">Check-in Date</label>
                                                        <input type="date" class="form-control form-control-sm date-input" 
                                                               data-item-id="@item.Id" 
                                                               data-date-type="checkin"
                                                               value="@item.CheckInDate.ToString("yyyy-MM-dd")" 
                                                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                    </div>
                                                    <div class="col-md-5">
                                                        <label class="form-label">Check-out Date</label>
                                                        <input type="date" class="form-control form-control-sm date-input" 
                                                               data-item-id="@item.Id" 
                                                               data-date-type="checkout"
                                                               value="@item.CheckOutDate.ToString("yyyy-MM-dd")" 
                                                               min="@item.CheckInDate.AddDays(1).ToString("yyyy-MM-dd")" />
                                                    </div>
                                                    <div class="col-md-2 text-end">
                                                        <button class="btn btn-danger btn-sm btn-remove-item mt-4" data-item-id="@item.Id">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="row mt-2">
                                                    <div class="col-12">
                                                        <div class="alert alert-info py-2 mb-0">
                                                            <small>
                                                                <strong>@item.NumberOfNights night(s)</strong> × $@item.Product.Price.ToString("F2") = 
                                                                <strong class="item-total">$@item.TotalPrice.ToString("F2")</strong>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span id="cart-subtotal">$@Model.CartItems.Sum(ci => ci.TotalPrice).ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (10%):</span>
                                <span id="cart-tax">$@((Model.CartItems.Sum(ci => ci.TotalPrice) * 0.1m).ToString("F2"))</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong id="cart-total">$@((Model.CartItems.Sum(ci => ci.TotalPrice) * 1.1m).ToString("F2"))</strong>
                            </div>
                            <a asp-controller="Booking" asp-action="Create" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-credit-card me-2"></i>Proceed to Checkout
                            </a>
                            <a asp-controller="Room" asp-action="AllRooms" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <form asp-action="Clear" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to clear your cart?')">
                            <i class="bi bi-trash me-2"></i>Clear Cart
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Update dates when changed
            $('.date-input').change(function () {
                var itemId = $(this).data('item-id');
                var dateType = $(this).data('date-type');
                var cartItem = $('.cart-item[data-item-id="' + itemId + '"]');
                
                var checkInInput = cartItem.find('.date-input[data-date-type="checkin"]');
                var checkOutInput = cartItem.find('.date-input[data-date-type="checkout"]');
                
                var checkInDate = checkInInput.val();
                var checkOutDate = checkOutInput.val();
                
                // Update minimum checkout date when checkin changes
                if (dateType === 'checkin' && checkInDate) {
                    var minCheckOut = new Date(checkInDate);
                    minCheckOut.setDate(minCheckOut.getDate() + 1);
                    checkOutInput.attr('min', minCheckOut.toISOString().split('T')[0]);
                    
                    // Reset checkout if it's before new minimum
                    if (checkOutDate && new Date(checkOutDate) <= new Date(checkInDate)) {
                        checkOutInput.val(minCheckOut.toISOString().split('T')[0]);
                        checkOutDate = checkOutInput.val();
                    }
                }
                
                if (checkInDate && checkOutDate) {
                    updateDates(itemId, checkInDate, checkOutDate);
                }
            });

            // Remove item
            $('.btn-remove-item').click(function () {
                if (confirm('Remove this item from cart?')) {
                    var itemId = $(this).data('item-id');
                    removeItem(itemId);
                }
            });

            function updateDates(itemId, checkInDate, checkOutDate) {
                $.ajax({
                    url: '@Url.Action("UpdateDates", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: itemId,
                        checkInDate: checkInDate,
                        checkOutDate: checkOutDate,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to update dates');
                        }
                    },
                    error: function () {
                        alert('An error occurred');
                    }
                });
            }

            function removeItem(itemId) {
                $.ajax({
                    url: '@Url.Action("RemoveItem", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: itemId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to remove item');
                        }
                    },
                    error: function () {
                        alert('An error occurred');
                    }
                });
            }
        });
    </script>
}
